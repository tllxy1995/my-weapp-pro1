@import "/static/css/vendor.wxss";

.comment {
  margin-top: 20rpx;
}
.comment .textarea {
  padding: 20rpx;
  width: 730rpx;
  height: 200rpx;
  background: #eee;
}
.comment .location {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
}
.comment .phone {
  margin-top: 20rpx;
  padding: 10rpx 20rpx;
}
.bookinfo {
  font-size: 28rpx;
}
.bookinfo .badge {
  display: inline-block;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  border: 2rpx #ea5a49 solid;
  color: #ea5a49;
}
.bookinfo .summary {
  margin-top: 20rpx;
  padding: 0 30rpx;
}
.bookinfo .right {
  float: right;
}
.bookinfo .detail {
  padding: 10rpx 20rpx;
}
.bookinfo .detail .avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  vertical-align: middle;
}
.bookinfo .thumb {
  width: 750rpx;
  height: 500rpx;
  position: relative;
}
.bookinfo .thumb .back {
  filter: blur(15rpx);
  width: 100%;
}
.bookinfo .thumb .img {
  position: absolute;
  width: 100%;
  height: 300rpx;
  left: 0;
  top: 30rpx;
}
.bookinfo .thumb .info {
  position: absolute;
  width: 100%;
  color: #fff;
  left: 0;
  top: 330rpx;
  text-align: center;
}